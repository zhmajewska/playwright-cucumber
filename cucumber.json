{
  "default": {
    "requireModule": ["ts-node/register"],
    "require": ["src/steps/*.ts", "src/pages/*.ts", "src/utils/*.ts"],
    "paths": ["features/**/*.feature"],
    "publishQuiet": true,
    "dryRun": false,
    "parallel": 2,
    "format": ["progress-bar", "allure-cucumberjs/reporter"],
    "formatOptions": {
      "snippetInterface": "async-await",
      "allure": {
        "resultsDir": "allure-results"
      }
    }
  },
  "rerun": {
    "requireModule": ["ts-node/register"],
    "require": ["src/test/steps/*.ts", "src/hooks/hooks.ts"],
    "publishQuiet": true,
    "dryRun": false,
    "parallel": 2,
    "format": [
      "progress-bar",
      "allure-cucumberjs/reporter",
      "rerun:@rerun.txt"
    ],
    "formatOptions": {
      "snippetInterface": "async-await",
      "allure": {
        "resultsDir": "allure-results"
      }
    }
  }
}
